<Window x:Class="WarGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black"/>
        <Button x:Name="NewGameBTN" Content="New Game" HorizontalAlignment="Left" Margin="34,38,0,0" VerticalAlignment="Top" Height="55" Width="165" Click="NewGameBTN_Click"/>
        <Button x:Name="FlipCardBTN" Content="Flip CArd" HorizontalAlignment="Left" Margin="34,162,0,0" VerticalAlignment="Top" Height="55" Width="165" IsEnabled="False"/>
        <Button x:Name="WarBTN" Content="Begin War" HorizontalAlignment="Left" Margin="34,283,0,0" VerticalAlignment="Top" Height="55" Width="165" IsEnabled="False"/>

    </Grid>
</Window>
